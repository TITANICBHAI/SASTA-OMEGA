<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AI Configuration"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <Switch
            android:id="@+id/switch_enable_ai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable AI System"
            android:layout_marginBottom="8dp" />

        <Switch
            android:id="@+id/switch_enable_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Reinforcement Learning"
            android:layout_marginBottom="8dp" />
        <Switch
            android:id="@+id/switch_enable_nlp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Natural Language Processing"
            android:layout_marginBottom="8dp" />

        <!-- Add after AI Aggression SeekBar -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reaction Time"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <SeekBar
            android:id="@+id/seekbar_reaction_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:layout_marginBottom="16dp" />
        <SeekBar
            android:id="@+id/seekbar_fps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Switch
            android:id="@+id/switch_battery_saver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Battery Saver Mode" />

        <!-- Add before Performance section -->
        <Spinner
            android:id="@+id/spinner_game_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Add after btn_update_models -->
        <Button
            android:id="@+id/btn_reset_ai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset AI Settings"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_export_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Export Training Data"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_import_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Import Training Data"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_ai_training"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AI Training Dashboard"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_strategy_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Strategy Configuration"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_gesture_training"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gesture Training"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_advanced_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Advanced Settings" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AI Aggression Level"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <SeekBar
            android:id="@+id/seekbar_ai_aggression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:layout_marginBottom="16dp" />

        <Spinner
            android:id="@+id/spinner_ai_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Performance"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp" />

        <Switch
            android:id="@+id/switch_high_performance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="High Performance Mode"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_cpu_usage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CPU: 0%"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_memory_usage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Memory: 0%"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_update_models"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update AI Models"
            android:layout_marginBottom="8dp" />

        <ProgressBar
            android:id="@+id/pb_model_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>