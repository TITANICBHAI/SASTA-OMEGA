<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/status_inactive"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textAlignment="center"
        android:padding="12dp"
        android:background="@drawable/background_rounded_black"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/iv_screenshot"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/tv_status"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:background="@drawable/background_rounded_black"
        android:src="@drawable/ic_gesture" />

    <LinearLayout
        android:id="@+id/control_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_screenshot"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_start_automation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_automation"
            android:textColor="@color/white"
            android:backgroundTint="@color/success_green"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_stop_automation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stop_automation"
            android:textColor="@color/white"
            android:backgroundTint="@color/error_red"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_train_objects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Train Objects"
            android:textColor="@color/white"
            android:backgroundTint="@color/info_blue"
            android:layout_marginBottom="8dp" />

        <!-- ND4J Advanced AI Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/card_background"
            android:padding="12dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Advanced AI (ND4J)"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_nd4j"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:thumb="@color/white"
                android:trackTint="@color/colorAccent" />

        </LinearLayout>

        <!-- AI Status Display -->
        <TextView
            android:id="@+id/tv_ai_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AI: Lightweight Mode"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textAlignment="center"
            android:padding="8dp"
            android:background="@drawable/status_indicator"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/control_buttons"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_settings"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorAccent"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_analytics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_analytics"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorAccent"
            android:layout_marginStart="8dp" />

    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu" />
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:layout_below="@id/control_buttons" />
    <TextView
        android:id="@+id/status_active"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
    <TextView
        android:id="@+id/status_inactive"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
</RelativeLayout>