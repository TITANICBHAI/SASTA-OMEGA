<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/light_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/HeaderText"
            android:text="More Features" />

        <!-- Game Strategy Configuration -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/SubHeaderText"
                    android:text="@string/strategy_config_title" />

                <TextView
                    style="@style/BodyText"
                    android:text="Configure game-specific strategies and detection zones for optimal automation" />

                <Button
                    android:id="@+id/btn_game_strategy_config"
                    style="@style/PrimaryButton"
                    android:text="Configure Strategies" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Screen Monitor -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/SubHeaderText"
                    android:text="Screen Monitor" />

                <TextView
                    style="@style/BodyText"
                    android:text="Monitor screen captures and real-time object detection" />

                <Button
                    android:id="@+id/btn_screen_monitor"
                    style="@style/PrimaryButton"
                    android:text="Open Screen Monitor" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Gesture Controller -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/SubHeaderText"
                    android:text="Gesture Controller" />

                <TextView
                    style="@style/BodyText"
                    android:text="Control automation through hand gestures and camera input" />

                <Button
                    android:id="@+id/btn_gesture_controller"
                    style="@style/PrimaryButton"
                    android:text="Open Gesture Controller" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Advanced Tools -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/SubHeaderText"
                    android:text="Advanced Tools" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_strategy_testing"
                        style="@style/PrimaryButton"
                        android:layout_weight="1"
                        android:text="Strategy Testing" />

                    <Button
                        android:id="@+id/btn_zone_editor"
                        style="@style/PrimaryButton"
                        android:layout_weight="1"
                        android:text="Zone Editor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_session_replay"
                        style="@style/SecondaryButton"
                        android:layout_weight="1"
                        android:text="Session Replay" />

                    <Button
                        android:id="@+id/btn_team_interface"
                        style="@style/SecondaryButton"
                        android:layout_weight="1"
                        android:text="Team Interface" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Game Elements -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/SubHeaderText"
                    android:text="Game Element Configuration" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_weapon_strategy"
                        style="@style/PrimaryButton"
                        android:layout_weight="1"
                        android:text="Weapon Strategy" />

                    <Button
                        android:id="@+id/btn_minimap_overlay"
                        style="@style/PrimaryButton"
                        android:layout_weight="1"
                        android:text="Minimap Overlay" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Settings -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/SubHeaderText"
                    android:text="Settings" />

                <TextView
                    style="@style/BodyText"
                    android:text="Configure app preferences and basic automation settings" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_settings"
                        style="@style/PrimaryButton"
                        android:layout_weight="1"
                        android:text="Basic Settings" />

                    <Button
                        android:id="@+id/btn_advanced_settings"
                        style="@style/SecondaryButton"
                        android:layout_weight="1"
                        android:text="Advanced Settings" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>