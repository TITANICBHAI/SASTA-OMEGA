<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Additional Tools -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Additional Tools"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btn_gesture_controller"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gesture Controller"
                    android:backgroundTint="@color/primary"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_screen_monitor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Screen Monitor"
                    android:backgroundTint="@color/accent_secondary"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_performance_monitor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Performance Monitor"
                    android:backgroundTint="@color/primary" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Advanced Features -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Advanced Features"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btn_advanced_training"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Advanced Training"
                    android:backgroundTint="@color/primary"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_neural_network_config"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Neural Network Config"
                    android:backgroundTint="@color/accent_secondary"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_advanced_debugging"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Advanced Debugging"
                    android:backgroundTint="@color/primary"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_ai_training_dashboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AI Training Dashboard"
                    android:backgroundTint="@color/accent_secondary"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_ai_comparison"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AI Performance Comparison"
                    android:backgroundTint="@color/primary" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Analytics & Configuration -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Analytics & Configuration"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btn_comprehensive_analytics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comprehensive Analytics"
                    android:backgroundTint="@color/primary"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_game_strategy_config"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Game Strategy Config"
                    android:backgroundTint="@color/accent_secondary"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_object_labeling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Object Labeling"
                    android:backgroundTint="@color/primary"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_gesture_training"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gesture Training"
                    android:backgroundTint="@color/accent_secondary"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_neural_network_training"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Neural Network Training"
                    android:backgroundTint="@color/primary" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Settings & Configuration -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Settings & Configuration"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btn_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:backgroundTint="@color/primary"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_advanced_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Advanced Settings"
                    android:backgroundTint="@color/accent_secondary"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_voice_command_config"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Voice Command Config"
                    android:backgroundTint="@color/primary" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Help & Support -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Help & Support"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btn_user_guide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User Guide"
                    android:backgroundTint="@color/primary"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_troubleshooting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Troubleshooting"
                    android:backgroundTint="@color/accent_secondary" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>