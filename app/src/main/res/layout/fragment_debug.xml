<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/light_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/HeaderText"
            android:text="Debug Console" />

        <!-- Quick Debug Controls -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/SubHeaderText"
                    android:text="Quick Debug Controls" />

                <CheckBox
                    android:id="@+id/cb_debug_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/debug_mode"
                    android:layout_margin="8dp" />

                <CheckBox
                    android:id="@+id/cb_show_coordinates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/show_coordinates"
                    android:layout_margin="8dp" />

                <CheckBox
                    android:id="@+id/cb_show_detection_boxes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/show_detection_boxes"
                    android:layout_margin="8dp" />

                <CheckBox
                    android:id="@+id/cb_show_fps_counter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/show_fps_counter"
                    android:layout_margin="8dp" />

                <TextView
                    android:id="@+id/tv_debug_status"
                    style="@style/BodyText"
                    android:text="Debug mode inactive"
                    android:textAlignment="center"
                    android:textColor="@color/status_inactive" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Advanced Debug Tools -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/SubHeaderText"
                    android:text="@string/debug_tools_title" />

                <TextView
                    style="@style/BodyText"
                    android:text="Access comprehensive debugging tools for performance monitoring, log analysis, and system diagnostics" />

                <Button
                    android:id="@+id/btn_advanced_debug_tools"
                    style="@style/PrimaryButton"
                    android:text="Open Debug Tools" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>