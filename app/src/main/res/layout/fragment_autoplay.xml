<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/autoplay_controls"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/status_active"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Active"
        android:textSize="14sp" />

    <!-- Automation Status -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/automation_status"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tv_automation_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/status_inactive"
        android:textSize="14sp"
        android:textColor="#666"
        android:layout_marginBottom="16dp" />

    <!-- Control Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/btn_start_automation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/start_automation"
            android:layout_marginEnd="8dp"
            android:background="@color/success_green"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_stop_automation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/stop_automation"
            android:layout_marginStart="8dp"
            android:background="@color/error_red"
            android:textColor="@color/white" />

    </LinearLayout>

    <!-- Strategy Selection -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/strategy_selection"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinner_strategy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp" />
    <!-- Add after spinner_strategy -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Game Type Detection"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinner_game_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <CheckBox
        android:id="@+id/cb_auto_game_detection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto-detect game type"
        android:layout_marginBottom="16dp" />
    <ProgressBar
        android:id="@+id/pb_model_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_game_type_detected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No game detected"
        android:textStyle="italic"
        android:layout_marginBottom="16dp" />



    <!-- Performance Settings -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/performance_settings"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/reaction_speed"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/seekbar_reaction_speed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:max="100"
            android:progress="50" />

        <TextView
            android:id="@+id/tv_reaction_speed_value"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="50%"
            android:textSize="12sp"
            android:gravity="center" />

    </LinearLayout>

    <!-- Real-time Stats -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/realtime_stats"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/actions_performed"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_actions_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/success_rate"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_success_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textSize="14sp"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>