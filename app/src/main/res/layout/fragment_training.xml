<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/light_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/HeaderText"
            android:text="AI Training Hub" />

        <!-- Object Labeling Training -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/SubHeaderText"
                    android:text="@string/object_labeling_title" />

                <TextView
                    style="@style/BodyText"
                    android:text="Create custom object detection datasets by labeling game elements" />

                <Button
                    android:id="@+id/btn_object_labeling"
                    style="@style/PrimaryButton"
                    android:text="Start Object Labeling" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Advanced Gesture Training -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/SubHeaderText"
                    android:text="@string/gesture_training_title" />

                <TextView
                    style="@style/BodyText"
                    android:text="Record and configure custom gesture sequences with sensitivity controls" />

                <Button
                    android:id="@+id/btn_gesture_training"
                    style="@style/PrimaryButton"
                    android:text="Configure Gestures" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Neural Network Training -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/SubHeaderText"
                    android:text="@string/neural_training_title" />

                <TextView
                    style="@style/BodyText"
                    android:text="Train and deploy custom neural networks for game-specific AI models" />

                <Button
                    android:id="@+id/btn_neural_network_training"
                    style="@style/PrimaryButton"
                    android:text="Start Training" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Voice Command Configuration -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/SubHeaderText"
                    android:text="@string/voice_config_title" />

                <TextView
                    style="@style/BodyText"
                    android:text="Set up voice commands and speech recognition for hands-free control" />

                <Button
                    android:id="@+id/btn_voice_command_config"
                    style="@style/PrimaryButton"
                    android:text="Configure Voice Commands" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>